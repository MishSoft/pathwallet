// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String
  name            String?
  createdAt       DateTime @default(now())

  // Relationships
  incomes         Income[]
  expenses        Expense[]
  savings         Saving[]
  financialGoals  FinancialGoal[]
}

model Income {
  id              String   @id @default(uuid())
  amount          Float
  source          String
  date            DateTime @default(now())
  
  // Relationship with User
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}

model Expense {
  id              String   @id @default(uuid())
  amount          Float
  category        String
  date            DateTime @default(now())
  
  // Relationship with User
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}

model Saving {
  id              String   @id @default(uuid())
  amount          Float
  date            DateTime @default(now())

  // Relationship with User
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}

model FinancialGoal {
  id              String   @id @default(uuid())
  title           String
  targetAmount    Float
  savedAmount     Float    @default(0)
  targetDate      DateTime?
  createdAt       DateTime @default(now()) // დამატებულია createdAt ველი

  // Relationship with User
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}